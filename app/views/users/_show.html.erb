<div class="box">
  <h2><%= user.name %></h2>
  <br>
  <table>
    <tr>
      <td>Approved:</td>
      <td>
        <% if  user.approved %>
          <span>Yes</span>
        <% else %>
          <span>No</span>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>Email:</td>
      <td><%= user.email %></td>
    </tr>
    <tr>
      <td>Date Created:</td>
      <td><%= user.created_at.localtime.to_s.split(" ")[0] %></td>
    </tr>
    <tr>
      <td>Time Created:</td>
      <td><%= user.created_at.localtime.to_s.split(" ")[1] %></td>
    </tr>
  </table>
</div>
